<h1><%= @review.game_title %></h1>
<h2>Score: <%= @review.score %></h2>
<p>Description: <%= @review.description %></p>
<br>
<h5>By: <%= @review.user.name %></h5>
<br>

<% if auth_to_edit?(@review) %>

  <a href="/reviews/<%= @review.id %>/edit">Edit Review</a>
  <br>


  <form class="" action="/reviews/<%= @review.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" name="" value="Delete Review">
  </form>

<% end %>
